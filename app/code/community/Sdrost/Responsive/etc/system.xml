<?xml version="1.0" ?>
<config>
    <!-- create new tab in admin system configuration -->
    <tabs>
        <responsivetab translate="label" module="responsive">
            <label>Sdrost Responsive</label>
            <sort_order>1</sort_order>
        </responsivetab>
    </tabs>
    <sections>
        <responsiveslider translate="label" module="responsive">
            <class>separator-top</class>
            <label>Slider</label>
            <tab>responsivetab</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <sliderimages translate="label">
                    <label>Slider Images</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <sliderimagefield1> <!-- Make up a field key -->
                            <label>Slider Image 1</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sliderimages</upload_dir> <!-- would upload into media/uploaddir -->
                            <base_url type="media" scope_info="1">sliderimages</base_url> <!-- same as previous line -->
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sliderimagefield1>
                    </fields>
                    <fields>
                        <sliderimagefield2> <!-- Make up a field key -->
                            <label>Slider Image 2</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sliderimages</upload_dir> <!-- would upload into media/uploaddir -->
                            <base_url type="media" scope_info="1">sliderimages</base_url> <!-- same as previous line -->
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sliderimagefield2>
                    </fields>
                    <fields>
                        <sliderimagefield3> <!-- Make up a field key -->
                            <label>Slider Image 3</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sliderimages</upload_dir> <!-- would upload into media/uploaddir -->
                            <base_url type="media" scope_info="1">sliderimages</base_url> <!-- same as previous line -->
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sliderimagefield3>
                    </fields>
                </sliderimages>
            </groups>
        </responsiveslider>
    </sections>
</config>
