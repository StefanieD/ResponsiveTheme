    <!-- remove tags from product view -->
    <catalog_product_view>
        
        <reference name="root">
            <action method="setTemplate">
                <template>page/product-view-responsive.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <!-- add items for product slider -->
            <action method="addItem">
                <type>skin_js</type>
                <name>js/simpleslider/bjqs-1.3.min.js</name>
            </action>
            <action method="addCss">
                <stylesheet>css/simpleslider/bjqs.css</stylesheet>
            </action>
        </reference>
        <remove name="product_tag_list"/>
        <remove name="right"/>
