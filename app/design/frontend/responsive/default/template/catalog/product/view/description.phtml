 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>

<div id="product-description-header">
        <span><?php echo $this->__('Details') ?></span>
        <img id="description-down-icon"
             src="<?php echo $this->getSkinUrl('images/down_icon_tall.png');?>"/>
  </div>

    <div id="description-content-hidden">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
    </div>
    <script type="text/javascript">
        $('#description-down-icon').click(function () {
            if ($('#description-content-hidden').is(":hidden")) {
                $('#description-content-hidden').slideDown("slow");
            } else {
                $('#description-content-hidden').hide();
            }
        });
    </script>
<?php endif; ?>
